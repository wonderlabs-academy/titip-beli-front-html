    script.
      AOS.init();
    include includes/navbar.pug
    .destiny.my-8.pt-20.pb-20
      .container.mx-auto.p-4.shadow-lg
        .top-text.border-b.border-purple
          h2.font-bold.pl-2.pt-4.pb-6.mt-4.mb-4(align='center', data-aos='fade-up', data-aos-duration='800')
            i.fas.fa-plane-departure.color-purple
            |  POST TRIP
